{
  "name": "@santospatrick/notify",
  "description": "Effortless Email and SMS Notification System using Third-Party Providers with Node.js",
  "version": "0.0.4",
  "main": "./dist/index.js",
  "files": ["dist", "README.md", "docs"],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/santospatrick/notify.git"
  },
  "author": "Patrick Santos <info@santospatrick.com>",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && babel src --out-dir dist --extensions \".ts,.js\"",
    "start": "node dist/index.js",
    "prod": "tsx src/index.ts",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@babel/cli": "7.25.7",
    "@babel/core": "7.25.8",
    "@babel/preset-env": "7.25.8",
    "@babel/preset-typescript": "7.25.7",
    "@rocketseat/eslint-config": "2.2.2",
    "@vitest/coverage-v8": "2.1.3",
    "babel-plugin-module-resolver": "5.0.2",
    "tsx": "4.19.1",
    "typescript": "5.6.3",
    "vite-tsconfig-paths": "5.0.1",
    "vitest": "2.1.3"
  },
  "dependencies": {
    "@sendgrid/mail": "8.1.4"
  }
}
